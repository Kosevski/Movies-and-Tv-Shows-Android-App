<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.watchio">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/iconhd"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/iconhd"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.watchio.UI.MainActivity"
            android:label="Watchio"
            android:logo="@drawable/logo"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.watchio.UI.MoviesUI.MoviesMainActivity"
            android:label="Movies"
            android:parentActivityName="com.example.watchio.UI.MainActivity">
        </activity>
        <activity android:name="com.example.watchio.UI.TVShowsUI.TVShowsMainActivity" />
    </application>

</manifest>